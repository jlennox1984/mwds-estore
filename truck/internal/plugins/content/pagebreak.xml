<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Content - Pagebreak</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
	<description>DESCMOSPAGING</description>
	<files>
		<filename plugin="pagebreak">pagebreak.php</filename>
	</files>
	<params>
		<param name="title" type="radio" default="1" label="Site Title" description="PARAMSITETITLE">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="multipage_toc" type="radio" default="1" label="Table of Contents" description="PARAMSITETOC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
	</params>
</install>
