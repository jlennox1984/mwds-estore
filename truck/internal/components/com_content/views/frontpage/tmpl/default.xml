<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Frontpage Blog Layout">
		<message>
			<![CDATA[CATEGORY BLOG LAYOUT DESC]]>
		</message>
	</layout>
	<state>
		<name>Frontpage Blog Layout</name>
		<description>FRONTPAGE BLOG LAYOUT DESC</description>
		<params>
			<param name="header" type="text" size="30" default="" label="Page Header" description="PARAMPAGEHEADER" />
			<param name="show_header" type="radio" default="1" label="Show Header" description="Show/Hide the page header">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="title" type="text" size="30" default="" label="Page Title" description="PARAMPAGETITLE" />
	 		<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="leading" type="text" size="3" default="1" label="Num Leading" description="PARAMLEADING" />
			<param name="intro" type="text" size="3" default="4" label="Num Intro" description="PARAMINTRO" />
			<param name="columns" type="text" size="3" default="2" label="Columns" description="PARAMCOLUMNS" />
			<param name="link" type="text" size="3" default="4" label="Num Links" description="Number of Items to display as Links." />
			<param name="orderby_pri" type="list" default="" label="Category Order" description="Order items by category">
				<option value="">No, order by Primary Order only</option>
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="orderby_sec" type="list" default="front" label="Primary Order" description="PARAMORDERBYSEC">
				<option value="front">Default</option>
				<option value="date">Oldest first</option>
				<option value="rdate">Most recent first</option>
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="author">Author Alphabetical</option>
				<option value="rauthor">Author Reverse-Alphabetical</option>
				<option value="hits">Most Hits</option>
				<option value="rhits">Least Hits</option>
				<option value="order">Ordering</option>
			</param>
			<param name="pagination" type="list" default="2" label="Pagination" description="Show/Hide Pagination support">
				<option value="0">Hide</option>
				<option value="1">Show</option>
				<option value="2">Auto</option>
			</param>
			<param name="pagination_results" type="radio" default="1" label="Pagination Results" description="PARAMPAGINATIONRESULTS">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="category" type="radio" default="0" label="Category Name" description="PARAMCATEG">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="category_link" type="radio" default="0" label="Category Name Linkable" description="PARAMCATEGLINK">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			<param name="item_title" type="radio" default="1" label="Item Title" description="Show/Hide the items title">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="link_titles" type="list" default="" label="Linked Titles" description="Make your Item titles linkable">
				<option value="">Use Global</option>
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			<param name="readmore" type="list" default="" label="Read More" description="Show/Hide the Read More link">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="rating" type="list" default="" label="Item Rating" description="PARAMRATING">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="author" type="list" default="" label="Author Names" description="PARAMAUTHOR">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="createdate" type="list" default="" label="Created Date and Time" description="PARAMCREATEDATE">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="modifydate" type="list" default="" label="Modified Date and Time" description="PARAMMODIFYDATE">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="pdf" type="list" default="" label="PDF Icon" description="PARAMPDF">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="print" type="list" default="" label="Print Icon" description="PARAMPRINT">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="email" type="list" default="" label="Email Icon" description="PARAMEMAIL">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
		</params>
		<advanced>
			<param name="secure" type="radio" default="0" label="SSL Enabled" description="PARAMSECURE">
				<option value="-1">Off</option>
				<option value="0">Ignore</option>
				<option value="1">On</option>
			</param>
			<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Menu Image" description="PARAMMENUIMAGE" />
			<param name="pageclass_sfx" type="text" size="20" default="" label="Page Class Suffix" description="PARAMPAGECLASSSFX" />
		</advanced>
	</state>
</metadata>