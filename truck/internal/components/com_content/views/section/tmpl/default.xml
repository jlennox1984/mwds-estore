<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Standard Section Layout">
		<message>
			<![CDATA[STANDARD SECTION LAYOUT DESC]]>
		</message>
	</layout>
	<state>
		<name>Standard Section Layout</name>
		<description>STANDARD SECTION LAYOUT DESC</description>
		<url>
			<param name="id" type="section" label="Section" description="Choose a section..." />
		</url>
		<params>
			<param name="orderby" type="list" default="" label="Order by" description="PARAMORDERBY">
				<option value="">Default</option>
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="other_cat_section" type="radio" default="1" label="Category List - Section" description="PARAMOTHERCATSECTION">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="empty_cat_section" type="radio" default="0" label="Empty Categories in Section" description="Show/Hide empty(no items) categories in Section view">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="page_title" type="radio" default="1" label="Section Title" description="Show/hide the section title">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="description" type="radio" default="0" label="Description" description="Show/Hide the Section Description">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="description_image" type="radio" default="0" label="Description Image" description="Show/Hide the Section Description Image">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="other_cat" type="radio" default="1" label="Category List - Category" description="PARAMTABLECATSEC">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="empty_cat" type="radio" default="0" label="Empty Categories" description="Show/Hide empty(no items) categories">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="cat_items" type="radio" default="1" label="Num Category Items" description="PARAMCATITEMS">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="cat_description" type="radio" default="1" label="Category Description" description="PARAMSHOWHIDE">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="date_format" type="text" size="15" default="" label="Date Format" description="PARAMDATEFORMAT" />
			<param name="date" type="list" default="" label="Date Column" description="Show/Hide the Date column">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="author" type="list" default="" label="Author Column" description="Show/Hide the Author column">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="hits" type="list" default="" label="Hits Column" description="Show/Hide the Hits column">
				<option value="">Use Global</option>
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="headings" type="radio" default="1" label="Table Headings" description="Show/Hide the Table Headings">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="navigation" type="radio" default="1" label="Navigation Bar" description="Show/Hide the Navigation bar">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="order_select" type="radio" default="1" label="Order Select" description="Show/Hide the Order Select dropdown">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="display" type="radio" default="1" label="Display Select" description="Show/Hide the Display Select dropdown">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="display_num" type="list" default="50" label="Display Number" description="PARAMDISPLAYNUM">
				<option value="5">5</option>
				<option value="10">10</option>
				<option value="15">15</option>
				<option value="20">20</option>
				<option value="25">25</option>
				<option value="30">30</option>
				<option value="50">50</option>
			</param>
			<param name="filter" type="radio" default="1" label="Filter" description="Show/Hide the Filter ability">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="filter_type" type="list" default="title" label="Filter Field" description="Which field shall the filter apply to">
				<option value="title">Title</option>
				<option value="author">Author</option>
				<option value="hits">Hits</option>
			</param>
		</params>
		<advanced>
			<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Menu Image" description="PARAMMENUIMAGE" />
			<param name="pageclass_sfx" type="text" size="20" default="" label="Page Class Suffix" description="PARAMPAGECLASSSFX" />
			<param name="secure" type="radio" default="0" label="SSL Enabled" description="PARAMSECURE">
				<option value="-1">Off</option>
				<option value="0">Ignore</option>
				<option value="1">On</option>
			</param>
		</advanced>
	</state>
</metadata>